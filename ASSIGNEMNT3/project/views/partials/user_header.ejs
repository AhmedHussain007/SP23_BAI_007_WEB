<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce User Header</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9O5SmXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #007bff !important; /* Primary blue for brand */
        }
        .navbar-nav .nav-link {
            color: #343a40 !important; /* Dark grey for links */
            margin-right: 15px;
            transition: color 0.3s ease-in-out;
        }
        .navbar-nav .nav-link:hover {
            color: #007bff !important; /* Blue on hover */
        }
        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
            transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        }
        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1); /* Subtle shadow for depth */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MyEcom</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/about-us">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/contact-us">Contact</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <% if (user) { %>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/cart">Cart </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user/my-orders">My Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user/profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" href="/auth/logout">Logout</a>
                            </li>
                        </ul>
                    <% } else { %>
                        <% if (req.path != '/login') { %>
                          <a class="btn btn-outline-primary me-2" href="/auth/login">Login</a>
                        <% } %>

                        <% if (req.path != '/register') { %>
                          <a class="btn btn-outline-primary me-2" href="/auth/register">Register</a>
                        <% } %>

                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Example JavaScript for updating cart item count (client-side, would ideally be dynamic from server)
        document.addEventListener('DOMContentLoaded', function() {
            const cartItemCountSpan = document.getElementById('cart-item-count');
            // This would be replaced with actual logic to fetch cart count, e.g., from a cookie or session variable
            // For now, let's just simulate a count
            let cartCount = localStorage.getItem('cartCount') || 0;
            cartItemCountSpan.textContent = cartCount;
        });
    </script>
</body>
</html>
