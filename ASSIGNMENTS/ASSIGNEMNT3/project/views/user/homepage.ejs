    <div id="products">
      <% for(let product of products) { %>
          <div style="cursor: pointer;" onclick="window.location.href='/products/<%= product._id %>'" class="product" style="margin-top: 30px;">
              <div class="img">
                  <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="product-image">
                  <form action="/cart/add" method="POST" style="width: 100%;">
                      <input type="hidden" name="productId" value="<%= product._id %>">
                      <input type="hidden" name="price" value="<%= product.price %>">
                      <button style="border: none;" type="submit" class="addtobag">ADD TO CART</button>
                  </form>
                  <div class="imagedesc">LIMITED EDITION</div>
              </div>
              <div class="product-info">
                  <div class="product-name">
                      <h3><%= product.title %></h3>
                      <span class="wishlist">&#9825;</span>
                  </div>
                  <p>Â£<%= product.price %></p>
                  <div class="rating" style="display: flex; gap: 2px; font-size: 13px;">
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-regular fa-star-half-stroke"></i>
                      <span class="reviews">(44)</span>
                  </div>
              </div>
          </div>
      <% } %>
    </div>

    <nav aria-label="..." style="margin: 20px 0px; width: 100%; display: flex; align-items: center; justify-content: center;">
      <ul class="pagination">

        <!-- Previous button -->
        <li class="page-item <%= !hasPrevPage ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= prevPage || 1 %>&limit=<%= limit %>">Previous</a>
        </li>

        <!-- Page numbers -->
        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
          </li>
        <% } %>

        <!-- Next button -->
        <li class="page-item <%= !hasNextPage ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= nextPage || totalPages %>&limit=<%= limit %>">Next</a>
        </li>

      </ul>
    </nav>






