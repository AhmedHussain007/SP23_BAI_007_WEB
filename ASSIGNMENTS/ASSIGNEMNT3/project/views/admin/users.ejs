<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Details</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
      /* General form styling */
      form {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        max-width: 500px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid #e0e0e0;
      }

      /* Label and input container */
      label {
        display: block;
        margin-bottom: 15px;
        font-weight: 600;
        color: #333;
      }

      /* Styling for all text inputs, textareas, and number inputs */
      input[type="text"],
      input[type="number"],
      input[type="url"],
      textarea {
        width: calc(100% - 20px); /* Account for padding */
        padding: 12px 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box; /* Include padding in element's total width */
        font-size: 1rem;
        color: #555;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
      }

      input[type="text"]:focus,
      input[type="number"]:focus,
      input[type="url"]:focus,
      textarea:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
        outline: none; /* Remove default outline */
      }

      textarea {
        resize: vertical; /* Allow vertical resizing only */
        min-height: 80px;
      }

      /* Checkbox specific styling */
      input[type="checkbox"] {
        margin-right: 8px;
        transform: scale(1.2); /* Slightly enlarge the checkbox */
        vertical-align: middle;
      }

      /* Submit button styling */
      button[type="submit"] {
        display: block;
        width: 100%;
        padding: 15px 20px;
        margin-top: 30px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.2);
      }

      button[type="submit"]:hover {
        background-color: #0056b3;
        transform: translateY(-2px); /* Slight lift on hover */
      }

      button[type="submit"]:active {
        background-color: #004085;
        transform: translateY(0);
      }
    </style>
</head>
<body>
    <%- include('../partials/admin_header') %>

    <div class="container my-4">
      <div class="row">
        <% users.forEach(user => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm" style="background-color: #ffffff; border-left: 5px solid #0d6efd;">
              <div class="card-body d-flex">
                <!-- Profile Image -->
                <img src="<%= user.profileImageUrl %>" alt="Profile" class="rounded-circle me-3" width="80" height="80" style="object-fit: cover; border: 2px solid #0d6efd;">

                <!-- User Info -->
                <div>
                  <h5 class="card-title text-dark mb-1"><%= user.firstName %> <%= user.lastName %></h5>
                  <p class="text-muted mb-1"><strong>Email:</strong> <%= user.email %></p>
                  <p class="text-muted mb-1"><strong>Phone:</strong> <%= user.phone || 'N/A' %></p>
                  <p class="text-muted mb-1"><strong>Address:</strong> <%= user.address || 'N/A' %></p>
                  <p class="text-muted mb-1"><strong>Genres:</strong> <%= user.genres.join(", ") %></p>
                  <p class="text-muted mb-1"><strong>Admin:</strong>
                    <% if (user.isAdmin) { %>
                      <span class="badge bg-success">Yes</span>
                    <% } else { %>
                      <span class="badge bg-secondary">No</span>
                    <% } %>
                  </p>
                  <p class="text-muted mb-2"><strong>Joined:</strong> <%= new Date(user.createdAt).toLocaleDateString() %></p>
                  <hr>
                  <p class="mb-0 text-dark"><strong>About:</strong> <br> <%= user.description %></p>
                </div>
              </div>
            </div>
          </div>
        <% }) %>

      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
